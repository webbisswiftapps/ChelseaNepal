<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >


    <com.webbisswift.cfcn.ui.custom_views.CTextView
        android:id="@+id/commentMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="21'"
        android:textAllCaps="true"
        android:textSize="20sp"
        android:textColor="@color/near_dark_text"
        app:font_name="@string/font_montserrat_regular"
        android:layout_marginLeft="5dp"
        />

    <View
        android:layout_width="1dp"
        android:layout_height="wrap_content"
        android:background="@color/light_white"
        android:layout_toRightOf="@+id/commentMinute"
        android:layout_marginLeft="5dp"
        android:layout_alignTop="@+id/commentMinute"
        android:layout_alignBottom="@id/commentMinute"

        />



    <com.webbisswift.cfcn.ui.custom_views.CTextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/commentMinute"
        android:layout_toEndOf="@id/commentMinute"
        android:text="Mame Biram Diouf  - Stoke City -  receives yellow card for a foul."
        android:textSize="14sp"
        android:textColor="@color/near_dark_text"
        app:font_name="@string/font_montserrat_regular"
        android:layout_marginLeft="15dp"
        />




</RelativeLayout>