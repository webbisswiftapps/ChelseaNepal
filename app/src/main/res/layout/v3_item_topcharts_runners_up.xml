<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="220dp"
    android:layout_height="35dp"
    >

    <ImageView
        android:id="@+id/tcRunnerupPlayerImage"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/v3_next_match_opponent_logo_bg"
        android:layout_marginRight="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="3dp"
        tools:src="@drawable/chelsea"
        android:padding="2dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        />


    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/tcRunnerupPlayerName"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:font_name="@string/font_montserrat_regular"
        android:text="C. Azpilicueta"
        android:textSize="12sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_black"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/tcRunnerupStat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:font_name="@string/font_bc_medium"
        android:text="20"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_black"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:gravity="center"
        />

</LinearLayout>