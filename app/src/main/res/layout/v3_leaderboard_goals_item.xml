<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_margin="5dp"
        >




        <ImageView
            android:id="@+id/playerImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:padding="3dp"
            android:background="@drawable/v3_next_match_opponent_logo_bg"
            />

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/playerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_semibold"
            tools:text="Willy Caballero"
            android:textColor="@color/v3colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/playerImg"
            android:layout_toEndOf="@id/playerImg"
            android:layout_alignTop="@+id/playerImg"
            android:layout_marginTop="3dp"
            />


        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/playerTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:font_name="@string/font_montserrat_regular"
            android:textAllCaps="false"
            android:text="Chelsea"
            android:textColor="@color/light_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/playerImg"
            android:layout_below="@+id/playerName"
            />







    </RelativeLayout>

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/penaltiesCount"
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:layout_height="match_parent"
        android:textSize="16sp"
        app:font_name="@string/font_bc_medium"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:text="20"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/goalsCount"
        android:layout_width="0dp"
        android:layout_weight="0.15"
        android:layout_height="match_parent"
        android:textSize="16sp"
        app:font_name="@string/font_bc_medium"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:text="20"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        />



</LinearLayout>