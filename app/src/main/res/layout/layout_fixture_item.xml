<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fixturesDisplay"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/card_padding"
    >



    <com.webbisswift.cfcn.ui.custom_views.CTextView
        android:id="@+id/fixturesCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_light"
        android:textColor="@color/semi_dark_text"
        android:text="Champions League"
        android:layout_centerHorizontal="true"
        />



    <LinearLayout
        android:id="@+id/scoresPaneF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fixturesCompetition"
        android:gravity="center"
        android:layout_marginTop="5dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/homeTeamLogoF"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chelsea"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <com.webbisswift.cfcn.ui.custom_views.CTextView
                android:id="@+id/fixturesHomeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:font_name="@string/font_montserrat_semibold"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:text="CHELSEA"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>


        <com.webbisswift.cfcn.ui.custom_views.CTextView
            android:id="@+id/hifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            app:font_name="@string/font_montserrat_semibold"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimary"
            android:text="-"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />







        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/awayTeamLogoF"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/atm_logo"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <com.webbisswift.cfcn.ui.custom_views.CTextView
                android:id="@+id/fixturesAwayTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                app:font_name="@string/font_montserrat_semibold"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:text="CHELSEA"
                android:layout_gravity="center_horizontal"
                />


        </LinearLayout>



    </LinearLayout>


    <com.webbisswift.cfcn.ui.custom_views.CTextView
        android:id="@+id/fixturesDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_regular"
        android:textColor="@color/semi_dark_text"
        android:layout_below="@id/scoresPaneF"
        android:text="Friday, 24 Dec 2017"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>


