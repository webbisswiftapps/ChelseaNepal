<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    style="@android:style/TextAppearance.StatusBar.EventContent"
    >

    <ImageView
        android:id="@+id/imagenotileft"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:contentDescription="@string/app_name"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        />


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_toRightOf="@+id/imagenotileft"
        android:layout_toEndOf="@+id/imagenotileft"
        android:layout_alignTop="@+id/imagenotileft"
        android:maxLines="2"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="marquee"
        android:textSize="12sp"
        android:textStyle="bold"
        android:drawableLeft="@drawable/ic_news_rss_feed_small"
        />

    <TextView
        android:id="@+id/desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/near_dark_text"
        android:layout_toRightOf="@+id/imagenotileft"
        android:layout_toEndOf="@+id/imagenotileft"
        android:layout_below="@+id/title"
        android:maxLines="2"
        android:ellipsize="marquee"
        android:textSize="12sp"
        android:layout_marginTop="3dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        />


</RelativeLayout>