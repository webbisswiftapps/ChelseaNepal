<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        >

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/position"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/dark_text"
            android:text="1"
            android:gravity="center"
            />

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/teamName"
            android:layout_width="0dp"
            android:layout_weight="0.5"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/dark_text"
            android:text="Chelsea"
            android:gravity="left|center_vertical"
            />

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/gamesPlayed"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/semi_dark_text"
            android:text="24"
            android:gravity="center"
            />

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/gamesWon"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/semi_dark_text"
            android:text="20"
            android:gravity="center"
            />

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/gamesDrawn"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/semi_dark_text"
            android:text="3"
            android:gravity="center"
            />

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/gamesLost"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/semi_dark_text"
            android:text="1"
            android:gravity="center"
            />

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/goalStats"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/semi_dark_text"
            android:text="24:11"
            android:gravity="center"
            android:visibility="gone"
            />



        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/goalDifference"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/semi_dark_text"
            android:text="25"
            android:gravity="center"
            android:visibility="gone"
            />

        <com.webbisswift.cfcnepal.ui.custom_views.CTextView
            android:id="@+id/points"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            app:font_name="@string/font_montserrat_semibold"
            android:textColor="@color/dark_text"
            android:text="88"
            android:gravity="center"
            />



    </LinearLayout>

</LinearLayout>