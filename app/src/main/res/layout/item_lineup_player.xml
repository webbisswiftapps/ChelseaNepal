<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >



    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/playerNumber"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_semibold"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="1"
        android:gravity="center"
        android:layout_centerVertical="true"
        />

    <ImageView
        android:id="@+id/playerImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_toRightOf="@+id/playerNumber"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:padding="3dp"
        android:background="@drawable/player_pic_round_bg"
        />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/playerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_semibold"
        android:text="Willy Caballero"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/playerImg"
        android:layout_alignTop="@+id/playerImg"
        android:layout_marginTop="3dp"
        />


    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/playerCountry"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_regular"
        android:textAllCaps="false"
        android:text="Argentina"
        android:textColor="@color/light_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/playerImg"
        android:layout_below="@+id/playerName"
     />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/playerPos"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        app:font_name="@string/font_montserrat_semibold"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="G"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_white"
        android:layout_toRightOf="@+id/playerImg"
        android:layout_below="@+id/playerCountry"
        android:layout_marginTop="10dp"
        />


</RelativeLayout>