<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:padding="8dp"
    tools:background="@color/text_white">


    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/vsCompetition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_semibold"
        android:textColor="@color/text_title_blue_1"
        tools:text="@string/lm_comp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        android:layout_marginTop="2dp"
        />


    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/vsStageRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:font_name="@string/font_montserrat_medium"
        android:textColor="@color/text_title_blue_1"
        tools:text="Matchday 13"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        />





    <LinearLayout
        android:id="@+id/vsScorePane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@+id/vsStageRound"
        android:layout_marginTop="-6dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/vsHomeTeamLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/chelsea"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <com.webbisswift.cfcn.v3.custom_views.CTextView
                android:id="@+id/vsHomeTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                app:font_name="@string/font_montserrat_bold"
                android:textAllCaps="false"
                android:textColor="@color/text_dark_gray"
                tools:text="Chelsea"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:maxLines="2"
                />


        </LinearLayout>





        <!--<com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/vshifen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:font_name="@string/font_montserrat_light"
            android:textColor="@color/text_title_blue_2"
            android:text="vs"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="8dp"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            /> -->



        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/vsAwayTeamLogo"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/atm_logo"
                android:layout_gravity="center_vertical|center_horizontal"
                />

            <com.webbisswift.cfcn.v3.custom_views.CTextView
                android:id="@+id/vsAwayTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:font_name="@string/font_montserrat_bold"
                android:textAllCaps="false"
                android:textColor="@color/text_dark_gray"
                tools:text="Everton"
                android:textSize="13sp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:maxLines="2"
                />
        </LinearLayout>



    </LinearLayout>





    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/vsTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_regular"
        android:textColor="@color/text_light_gray"
        tools:text="@string/nm_time"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_below="@+id/vsScorePane"
        android:layout_marginTop="-40dp"
        android:textSize="13sp"
        />
    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/vsDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        app:font_name="@string/font_montserrat_regular"
        android:textColor="@color/text_light_gray"
        tools:text="@string/nm_date"
        android:layout_centerHorizontal="true"
        android:visibility="visible"
        android:layout_below="@+id/vsTime"
        />



</RelativeLayout>