<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/leagueTableCard"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    >

    <ViewSwitcher
        android:id="@+id/leageTableSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


       <ProgressBar
            android:id="@+id/leagueTableProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleSmall"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            >

            <com.webbisswift.cfcn.v3.custom_views.CTextView
                android:id="@+id/tableTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Premier League"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:font_name="@string/font_montserrat_regular"
                android:textAllCaps="true"
                android:textColor="@color/light_text"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_below="@id/tableTitle"
                />


            <LinearLayout
                android:id="@+id/leagueTableHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/tableTitle"
                android:layout_marginTop="5dp"
                >
            </LinearLayout>

            <com.webbisswift.cfcn.v3.custom_views.CButton
                android:id="@+id/statsStandingsPLBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/leagueTableHolder"
                android:layout_marginTop="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/colorful_gradient"
                android:foreground="?attr/selectableItemBackground"
                android:text="Full Table &amp; Stats"
                android:textColor="@color/text_white"
                app:font_name="@string/font_montserrat_semibold"
                android:gravity="center"
                android:padding="10dp"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
                app:drawableRightCompat="@drawable/ic_arrow_forward_white_24dp"
                />


        </RelativeLayout>



    </ViewSwitcher>
</android.support.v7.widget.CardView>
