<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/matchEventsCard"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    android:layout_marginBottom="3dp"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Match Events"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_bc_semi_bold"
            android:textAllCaps="true"
            android:textColor="@color/text_white"
            android:padding="@dimen/card_padding"
            android:background="@drawable/gradient_moon_purple"
            android:layout_marginBottom="6dp"
            />


            <android.support.v7.widget.RecyclerView
                android:id="@+id/eventRecycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>



