<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/topScorersCard"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    android:layout_marginTop="10dp"
    >

    <ViewSwitcher
        android:id="@+id/topScorersSwitcher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ProgressBar
            android:id="@+id/topScorersProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleSmall"
            />

        <RelativeLayout
            android:id="@+id/topScorersDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding"
            >

            <com.webbisswift.cfcnepal.ui.custom_views.CTextView
                android:id="@+id/topScorersTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Scorers"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:font_name="@string/font_montserrat_regular"
                android:textAllCaps="true"
                android:textColor="@color/light_text"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/light_white"
                android:layout_below="@+id/topScorersTitle"
                android:layout_marginTop="5dp"
                />

            <LinearLayout
                android:id="@+id/topScorersHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/topScorersTitle"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                >

                <include layout="@layout/layout_top_scorer_title" />
                <include layout="@layout/layout_top_scorer_item" />

            </LinearLayout>

        </RelativeLayout>

    </ViewSwitcher>

</android.support.v7.widget.CardView>
