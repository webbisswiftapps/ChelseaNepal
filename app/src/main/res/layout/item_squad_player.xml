<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >



    <com.webbisswift.cfcn.ui.custom_views.CTextView
        android:id="@+id/playerNumber"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_bold"
        android:textAllCaps="true"
        android:textColor="@color/text_white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/round_blue_status_bg"
        android:padding="10dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        />

    <com.webbisswift.cfcn.ui.custom_views.CTextView
        android:id="@+id/playerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        app:font_name="@string/font_montserrat_semibold"
        android:textAllCaps="true"
        android:text="Willy Caballero"
        android:textColor="@color/dark_text"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/playerNumber"
        android:layout_centerInParent="true"
        />



</RelativeLayout>