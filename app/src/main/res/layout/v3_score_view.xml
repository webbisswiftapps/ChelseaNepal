<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="4dp"
    tools:background="@color/text_white">




<LinearLayout
    android:id="@+id/lmScorePane"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerHorizontal="true"
    android:gravity="center"
    android:layout_marginTop="20dp"
    >
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/lmHomeTeamLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chelsea"
            android:layout_gravity="center_vertical|center_horizontal"
            />

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/lmHomeTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:font_name="@string/font_montserrat_bold"
            android:textAllCaps="false"
            android:textColor="@color/text_dark_gray"
            android:text="Chelsea"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            />


    </LinearLayout>



    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/lmHomeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:font_name="@string/font_bc_semi_bold"
        android:textAllCaps="true"
        android:textColor="@color/text_title_blue_2"
        android:text="3"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="top"
        />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/lmhifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:font_name="@string/font_montserrat_semibold"
        android:textAllCaps="true"
        android:textColor="@color/text_title_blue_2"
        android:text=":"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="8dp"
        android:layout_gravity="top"
        />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/lmAwayScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        app:font_name="@string/font_bc_semi_bold"
        android:textAllCaps="true"
        android:textColor="@color/text_title_blue_2"
        android:text="1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_gravity="top"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/lmAwayTeamLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/atm_logo"
            android:layout_gravity="center_vertical|center_horizontal"
            />

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/lmAwayTeam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:font_name="@string/font_montserrat_bold"
            android:textAllCaps="false"
            android:textColor="@color/text_dark_gray"
            android:text="Everton"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:maxLines="2"
            android:layout_marginTop="4dp"
            />
    </LinearLayout>



</LinearLayout>

<com.webbisswift.cfcn.v3.custom_views.CTextView
    android:id="@+id/htScores"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    app:font_name="@string/font_bc_semi_bold"
    android:textAllCaps="true"
    android:textColor="@color/chelsea_blue_dark"
    android:text="0 - 0"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/lmScorePane"
    android:layout_marginTop="-20dp"
    />
<com.webbisswift.cfcn.v3.custom_views.CTextView
    android:id="@+id/lmPenScore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    app:font_name="@string/font_bc_semi_bold"
    android:textColor="@color/near_dark_text"
    android:text="5 - 1  (Pen)"
    android:layout_below="@id/htScores"
    android:layout_centerHorizontal="true"
    android:visibility="visible"
    />

<com.webbisswift.cfcn.v3.custom_views.CTextView
    android:id="@+id/lmAggScore"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    app:font_name="@string/font_bc_semi_bold"
    android:textColor="@color/near_dark_text"
    android:text="5 - 3  (Agg)"
    android:layout_above="@id/lmScorePane"
    android:layout_centerHorizontal="true"
    android:visibility="visible"
    android:layout_marginBottom="-30dp"
    />

</RelativeLayout>