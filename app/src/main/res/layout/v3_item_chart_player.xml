<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:background="@color/text_white"
    android:padding="3dp"
    android:layout_marginLeft="@dimen/card_padding"
    android:layout_marginRight="@dimen/card_padding">



    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/playerNumber"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:textSize="16sp"
        app:font_name="@string/font_bc_semi_bold"
        android:textAllCaps="true"
        android:textColor="@color/text_white"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:text="1"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ic_chelsea_kit"
        />


        <ImageView
            android:id="@+id/playerImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:padding="3dp"
            android:background="@drawable/v3_next_match_opponent_logo_bg"
            android:layout_toRightOf="@id/playerNumber"
            android:layout_toEndOf="@id/playerNumber"
            />

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/playerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_semibold"
            android:text="Willy Caballero"
            android:textColor="@color/v3colorPrimaryDark"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/playerImg"
            android:layout_toEndOf="@id/playerImg"
            android:layout_alignTop="@+id/playerImg"
            android:layout_marginTop="10dp"
            />


        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/playerCountry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_medium"
            android:textAllCaps="false"
            android:text="Argentina"
            android:textColor="@color/light_text"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toRightOf="@+id/playerImg"
            android:layout_toEndOf="@id/playerImg"
            android:layout_below="@+id/playerName"
            android:layout_toStartOf="@id/statCount"
            android:layout_toLeftOf="@id/statCount"
            />




           <com.webbisswift.cfcn.v3.custom_views.CTextView
                android:id="@+id/statCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                app:font_name="@string/font_bc_semi_bold"
                android:textAllCaps="true"
                android:textColor="@color/v3colorPrimaryDark"
                android:layout_marginTop="5dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="23dp"
                android:layout_alignParentEnd="true"
                tools:text="20"
                android:gravity="center"
                android:layout_centerVertical="true"
                />

<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/light_white"
    android:layout_toRightOf="@+id/playerImg"
    android:layout_below="@+id/playerCountry"
    android:layout_marginTop="10dp"
    />






</RelativeLayout>