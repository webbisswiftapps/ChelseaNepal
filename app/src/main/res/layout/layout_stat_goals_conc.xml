<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:gravity="center"
    >


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="3dp"
        >
        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/goalsAgainst"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:textSize="28sp"
            android:gravity="center_vertical|center_horizontal"
            app:font_name="@string/font_montserrat_semibold"
            android:textAllCaps="true"
            android:text="10"
            android:textColor="@color/loss_2"
            android:background="@color/light_white"
            />


        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/goalsAgainstTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical|center_horizontal"
            app:font_name="@string/font_montserrat_semibold"
            android:textAllCaps="true"
            android:text="GOALS"
            android:textColor="@color/text_white"
            android:background="@drawable/red_gradient_rect"
            android:padding="5dp"
            android:layout_below="@+id/goalsAgainst"
            />

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/goalsAgainstHAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:font_name="@string/font_montserrat_semibold"
            android:textAllCaps="true"
            android:text="H 12 | A 24"
            android:textColor="@color/light_text"
            android:layout_below="@+id/goalsAgainstTitle"
            android:gravity="center"
            android:layout_alignRight="@+id/goalsAgainstTitle"
            android:layout_alignLeft="@+id/goalsAgainstTitle"
            android:padding="3dp"
            />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="3dp"
        >
        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/goalsConcededPerGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:textSize="28sp"
            android:gravity="center_vertical|center_horizontal"
            app:font_name="@string/font_montserrat_semibold"
            android:textAllCaps="true"
            android:text="10"
            android:textColor="@color/loss_2"
            android:background="@color/light_white"
            />


        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/goalsConcededPerGameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_vertical|center_horizontal"
            app:font_name="@string/font_montserrat_semibold"
            android:textAllCaps="true"
            android:text="PER GAME"
            android:textColor="@color/text_white"
            android:background="@drawable/red_gradient_rect"
            android:padding="5dp"
            android:layout_below="@+id/goalsConcededPerGame"
            />

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/goalsConcededPerGameHAT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            app:font_name="@string/font_montserrat_semibold"
            android:textAllCaps="true"
            android:text="H 12 | A 24"
            android:textColor="@color/light_text"
            android:layout_below="@+id/goalsConcededPerGameTitle"
            android:gravity="center"
            android:layout_alignRight="@+id/goalsConcededPerGameTitle"
            android:layout_alignLeft="@+id/goalsConcededPerGameTitle"
            android:padding="3dp"
            />


    </RelativeLayout>


</LinearLayout>