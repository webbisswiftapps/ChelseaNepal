<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.modal.admin.AdminActivity">


<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding"
        >

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="3dp"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding"
                >

                <com.webbisswift.cfcn.v3.custom_views.CTextView
                    android:id="@+id/eventsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Shedule CFCN Event"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    app:font_name="@string/font_montserrat_regular"
                    android:textAllCaps="true"
                    android:textColor="@color/light_text"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/light_white"
                    android:layout_below="@+id/eventsTitle"
                    android:layout_marginTop="5dp"
                    />

                <EditText
                    android:id="@+id/eventTitleEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:layout_below="@+id/eventsTitle"
                    android:layout_marginTop="8dp"
                    />



                <EditText
                    android:id="@+id/eventDescEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Event Description"
                    android:layout_below="@+id/eventTitleEntry"
                    android:layout_marginTop="8dp"
                    />


                <EditText
                    android:id="@+id/eventDateEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventDescEntry"
                    android:hint="Event Date"
                    android:editable="false"
                    />

                <com.webbisswift.cfcn.v3.custom_views.CButton
                    android:id="@+id/scheduleEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/eventDateEntry"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/colorful_gradient"
                    android:text="Schedule"
                    android:textColor="@color/text_white"
                    app:font_name="@string/font_montserrat_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="3dp"
            android:layout_marginTop="10dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/card_padding"
                >

                <com.webbisswift.cfcn.v3.custom_views.CTextView
                    android:id="@+id/notTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NOTIFICATIONS"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    app:font_name="@string/font_montserrat_regular"
                    android:textAllCaps="true"
                    android:textColor="@color/light_text"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/light_white"
                    android:layout_below="@+id/notTitle"
                    android:layout_marginTop="5dp"
                    />

                <EditText
                    android:id="@+id/notTitleEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Title"
                    android:layout_below="@+id/notTitle"
                    android:layout_marginTop="8dp"
                    />



                <EditText
                    android:id="@+id/notMsgEntry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Message"
                    android:layout_below="@+id/notTitleEntry"
                    android:layout_marginTop="8dp"
                    />

                <com.webbisswift.cfcn.v3.custom_views.CButton
                    android:id="@+id/sendNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notMsgEntry"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/colorful_gradient"
                    android:text="Send"
                    android:textColor="@color/text_white"
                    app:font_name="@string/font_montserrat_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    android:layout_centerHorizontal="true"
                    />




            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <com.webbisswift.cfcn.v3.custom_views.CButton
            android:id="@+id/updateFixtures"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countDownSwitcher"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/colorful_gradient"
            android:text="Update Fixtures"
            android:textColor="@color/text_white"
            app:font_name="@string/font_montserrat_semibold"
            android:gravity="center"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            />

        <com.webbisswift.cfcn.v3.custom_views.CButton
            android:id="@+id/updateResults"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countDownSwitcher"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/colorful_gradient"
            android:text="Update Results"
            android:textColor="@color/text_white"
            app:font_name="@string/font_montserrat_semibold"
            android:gravity="center"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            />

        <com.webbisswift.cfcn.v3.custom_views.CButton
        android:id="@+id/updateTables"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/countDownSwitcher"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:background="@drawable/colorful_gradient"
        android:text="Update Tables"
        android:textColor="@color/text_white"
        app:font_name="@string/font_montserrat_semibold"
        android:gravity="center"
        android:padding="10dp"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        />

        <com.webbisswift.cfcn.v3.custom_views.CButton
            android:id="@+id/updateTeamInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countDownSwitcher"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/colorful_gradient"
            android:text="Update Team Info"
            android:textColor="@color/text_white"
            app:font_name="@string/font_montserrat_semibold"
            android:gravity="center"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            />

        <com.webbisswift.cfcn.v3.custom_views.CButton
            android:id="@+id/updateNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countDownSwitcher"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/colorful_gradient"
            android:text="Update News"
            android:textColor="@color/text_white"
            app:font_name="@string/font_montserrat_semibold"
            android:gravity="center"
            android:padding="10dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            />





    </LinearLayout>





</android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>