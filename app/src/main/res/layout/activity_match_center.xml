<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.screens.home.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            app:layout_scrollFlags="scroll|enterAlways|enterAlwaysCollapsed"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleTextAppearance="@android:color/transparent"
            android:fitsSystemWindows="true">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/west_stand"
                android:scaleType="centerCrop"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/toolbar_tp"
                />


            <android.support.v7.widget.Toolbar
                android:id="@+id/toolBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="0dp"
                >

                <RelativeLayout
                    android:id="@+id/nextMatchDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <ImageButton
                        android:id="@+id/backButton"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:srcCompat="@drawable/ic_arrow_back_white_24dp"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:background="@android:color/transparent"
                        android:layout_marginTop="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginLeft="16dp"
                        />

                    <LinearLayout
                        android:id="@+id/scoresPaneLR"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/nextMatchTimings"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/homeTeamLogoLR"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/chelsea_logo"
                                android:layout_gravity="center_vertical|center_horizontal"
                                />

                            <com.webbisswift.cfcn.ui.custom_views.CTextView
                                android:id="@+id/nextMatchHomeTeam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                app:font_name="@string/font_montserrat_semibold"
                                android:textAllCaps="true"
                                android:textColor="@color/text_white"
                                android:text="CHELSEA"
                                android:layout_gravity="center_horizontal"
                                />


                        </LinearLayout>



                        <com.webbisswift.cfcn.ui.custom_views.CTextView
                            android:id="@+id/homeScoreLR"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="26sp"
                            app:font_name="@string/font_montserrat_semibold"
                            android:textAllCaps="true"
                            android:textColor="@color/text_white"
                            android:text="0"
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            />

                        <com.webbisswift.cfcn.ui.custom_views.CTextView
                            android:id="@+id/hifen"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="20sp"
                            app:font_name="@string/font_montserrat_semibold"
                            android:textAllCaps="true"
                            android:textColor="@color/text_white"
                            android:text=":"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="8dp"
                            android:gravity="center"
                            />

                        <com.webbisswift.cfcn.ui.custom_views.CTextView
                            android:id="@+id/awayScoreLR"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="26sp"
                            app:font_name="@string/font_montserrat_semibold"
                            android:textAllCaps="true"
                            android:textColor="@color/text_white"
                            android:text="0"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="center"
                            />


                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >

                            <ImageView
                                android:id="@+id/awayTeamLogoLR"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/atm_logo"
                                android:layout_gravity="center_vertical|center_horizontal"
                                />

                            <com.webbisswift.cfcn.ui.custom_views.CTextView
                                android:id="@+id/nextMatchAwayTeam"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:font_name="@string/font_montserrat_semibold"
                                android:textAllCaps="true"
                                android:textColor="@color/text_white"
                                android:text="Atletico"
                                android:textSize="12sp"
                                android:layout_gravity="center_horizontal"
                                />
                        </LinearLayout>

                    </LinearLayout>




                    <com.webbisswift.cfcn.ui.custom_views.CTextView
                        android:id="@+id/nextMatchCompetition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:font_name="@string/font_montserrat_semibold"
                        android:textColor="@color/text_white"
                        android:layout_below="@id/lastMatchTitle"
                        android:text="Champions League"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="40dp"
                        />

                    <com.webbisswift.cfcn.ui.custom_views.CTextView
                        android:id="@+id/nextMatchVenue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:font_name="@string/font_montserrat_regular"
                        android:textColor="@color/text_white"
                        android:layout_below="@id/nextMatchCompetition"
                        android:text="Wanda Metropolitano"
                        android:layout_centerHorizontal="true"
                        />



                    <com.webbisswift.cfcn.ui.custom_views.CTextView
                        android:id="@+id/nextMatchTimings"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:font_name="@string/font_montserrat_regular"
                        android:textColor="@color/text_white"
                        android:layout_below="@id/nextMatchVenue"
                        android:text="Today, 10:15 p.m."
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/live_bg_round"
                        android:padding="8dp"
                        />




                    <com.webbisswift.cfcn.ui.custom_views.CTextView
                        android:id="@+id/nextMatchPenalties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        app:font_name="@string/font_montserrat_semibold"
                        android:textColor="@color/text_white"
                        android:layout_below="@id/scoresPaneLR"
                        android:visibility="gone"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="1dp"
                        android:layout_marginBottom="4dp"
                        />




                </RelativeLayout>


            </android.support.v7.widget.Toolbar>



        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="scrollable"
            app:tabGravity="center"
            app:tabIndicatorColor="@color/colorAccent"
            app:tabIndicatorHeight="3dp"
            app:tabSelectedTextColor="@color/colorAccent"
            app:tabTextColor="@color/text_white"
            android:layout_gravity="bottom"
            app:layout_collapseMode="pin"
            android:background="@color/toolbar_tp"
            />


    </android.support.design.widget.AppBarLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        />

</android.support.design.widget.CoordinatorLayout>