<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="450dp"
    tools:background="@drawable/v3_main_bg"
    android:padding="@dimen/card_padding"
    >


    <android.support.v7.widget.CardView
        android:id="@+id/compCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="6dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >



            <LinearLayout
                android:id="@+id/upcomingHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible"
                >
                <com.webbisswift.cfcn.v3.custom_views.CTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="UPCOMING"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    app:font_name="@string/font_bc_semi_bold"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:padding="@dimen/card_padding"
                    android:background="@drawable/gradient_moon_purple"
                    android:layout_marginBottom="6dp"
                    />

                <include layout="@layout/v3_vs_small" />

            </LinearLayout>



            <LinearLayout
                android:id="@+id/resultHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <com.webbisswift.cfcn.v3.custom_views.CTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LAST MATCH"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    app:font_name="@string/font_bc_semi_bold"
                    android:textAllCaps="true"
                    android:textColor="@color/text_white"
                    android:padding="@dimen/card_padding"
                    android:background="@drawable/gradient_moon_purple"
                    android:layout_marginBottom="6dp"
                    />

                <include layout="@layout/v3_score_small" />

            </LinearLayout>




            <com.webbisswift.cfcn.v3.custom_views.CTextView
                android:id="@+id/leagueTableTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TABLE"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:font_name="@string/font_bc_semi_bold"
                android:textAllCaps="true"
                android:textColor="@color/text_white"
                android:padding="@dimen/card_padding"
                android:background="@drawable/gradient_moon_purple"
                android:layout_marginBottom="6dp"
                />

            <LinearLayout
                android:id="@+id/leagueTableHolder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >



            </LinearLayout>







        </LinearLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>