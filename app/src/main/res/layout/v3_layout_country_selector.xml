<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".v3.ui.screens.splash.SplashActivity"
    >


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/west_stand"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/v3_bg_gradient_tp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/fragment_padding"
        >

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/topWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:font_name="@string/font_bc_bold"
            android:text="@string/hi"
            android:textSize="28sp"
            android:textColor="@color/text_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:shadowColor="@color/dark_text"
            />


        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/chooseRegion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="280dp"
            app:font_name="@string/font_montserrat_regular"
            android:text="@string/choose_region"
            android:textSize="18sp"
            android:textColor="@color/text_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:shadowColor="@color/dark_text"
            android:layout_below="@+id/topWelcome"
            android:gravity="center"
            />



        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/regionSelectionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="8dp"
            fancy:fb_borderColor="@color/v3colorPrimaryDark"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/text_white"
            fancy:fb_focusColor="@color/text_white"
            fancy:fb_fontIconResource="&#xf041;"
            fancy:fb_iconPosition="left"
            fancy:fb_iconPaddingRight="8dp"
            fancy:fb_radius="@dimen/bottom_navigation_notification_radius"
            fancy:fb_text="@string/region_default"
            fancy:fb_textColor="@color/colorPrimary"
            fancy:fb_textFont="@string/font_montserrat_semibold"
            android:layout_alignLeft="@+id/chooseRegion"
            android:layout_alignRight="@id/chooseRegion"
            android:layout_alignStart="@id/chooseRegion"
            android:layout_alignEnd="@+id/chooseRegion"
            android:layout_below="@+id/chooseRegion"
            android:foreground="?android:selectableItemBackground"
            android:textSize="18sp"
            />


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_continue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="8dp"
            fancy:fb_borderColor="@color/v3colorPrimaryDark"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/v3colorAccentDark"
            fancy:fb_focusColor="@color/v3colorPrimaryDarkest"
            fancy:fb_fontIconResource="&#xf054;"
            fancy:fb_iconPosition="right"
            fancy:fb_iconPaddingLeft="8dp"
            fancy:fb_radius="30dp"
            fancy:fb_text="@string/cont"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textFont="@string/font_montserrat_semibold"
            android:layout_alignLeft="@+id/chooseRegion"
            android:layout_alignRight="@id/chooseRegion"
            android:layout_alignStart="@id/chooseRegion"
            android:layout_alignEnd="@+id/chooseRegion"
            android:layout_below="@+id/regionSelectionText"
            android:foreground="?android:selectableItemBackground"
            />


        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:layout_marginTop="8dp"
            fancy:fb_borderColor="#FFFFFF"
            fancy:fb_borderWidth="1dp"
            fancy:fb_ghost="true"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="30dp"
            fancy:fb_text="@string/skip"
            fancy:fb_textColor="#FFFFFF"
            fancy:fb_textFont="@string/font_montserrat_semibold"
            android:layout_alignLeft="@+id/chooseRegion"
            android:layout_alignRight="@id/chooseRegion"
            android:layout_alignStart="@id/chooseRegion"
            android:layout_alignEnd="@+id/chooseRegion"
            android:layout_below="@+id/btn_continue"
            android:foreground="?android:selectableItemBackground"
            />



        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/regionReqmtInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="280dp"
            app:font_name="@string/font_montserrat_regular"
            android:text="@string/region_requirement"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:layout_alignLeft="@+id/chooseRegion"
            android:layout_alignRight="@id/chooseRegion"
            android:layout_alignStart="@id/chooseRegion"
            android:layout_alignEnd="@+id/chooseRegion"
            android:shadowColor="@color/dark_text"
            android:layout_below="@+id/btn_skip"
            android:gravity="left"
            />



    </RelativeLayout>

</FrameLayout>
