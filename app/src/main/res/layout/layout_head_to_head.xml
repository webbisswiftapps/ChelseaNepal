<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/h2hCard"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="3dp"
    >



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <com.webbisswift.cfcn.ui.custom_views.CTextView
            android:id="@+id/h2hTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Head To Head"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_regular"
            android:textAllCaps="true"
            android:textColor="@color/light_text"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_white"
            android:layout_below="@+id/h2hTitle"
            android:layout_marginTop="5dp"
            />

        <LinearLayout
            android:id="@+id/h2hHolder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/h2hTitle"
            android:layout_marginTop="10dp"
            >


        </LinearLayout>



    </RelativeLayout>




</android.support.v7.widget.CardView>
