<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="6dp"
    android:layout_margin="@dimen/card_padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manager"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_bc_semi_bold"
            android:textAllCaps="true"
            android:textColor="@color/text_white"
            android:padding="@dimen/card_padding"
            android:background="@drawable/gradient_moon_purple"
            android:layout_marginBottom="6dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/coachImg"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="3dp"
                android:background="@drawable/v3_next_match_opponent_logo_bg"
                />

            <com.webbisswift.cfcn.v3.custom_views.CTextView
                android:id="@+id/coach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:font_name="@string/font_montserrat_semibold"
                tools:text="Maurizio Sarri"
                android:textColor="@color/v3colorPrimaryDark"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toRightOf="@id/coachImg"
                android:layout_toEndOf="@id/coachImg"
                android:layout_marginTop="5dp"
                />


            <com.webbisswift.cfcn.v3.custom_views.CTextView
                android:id="@+id/coachHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                app:font_name="@string/font_montserrat_medium"
                android:textColor="@color/light_text_2"
                tools:text="Italy"
                android:gravity="center"
                android:layout_below="@id/coach"
                android:layout_toRightOf="@id/coachImg"
                android:layout_toEndOf="@id/coachImg"
                android:layout_alignLeft="@id/coach"
                />


        </RelativeLayout>


    </LinearLayout>






</android.support.v7.widget.CardView>