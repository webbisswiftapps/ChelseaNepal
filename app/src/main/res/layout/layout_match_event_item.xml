<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >




    <ImageView
        android:id="@+id/eventTypeImg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/yellow_card"
        android:layout_marginLeft="10dp"
        />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/eventTime"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="21'"
        android:textAllCaps="true"
        android:textSize="16sp"
        android:textColor="@color/dark_text"
        app:font_name="@string/font_montserrat_bold"
        android:layout_below="@+id/eventTypeImg"
        android:gravity="center"
        />


    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/eventPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second Yellow Card - Marcos Alonso"
        android:textSize="14sp"
        app:font_name="@string/font_montserrat_regular"
        android:textColor="@color/dark_text"
        android:layout_toRightOf="@id/eventTypeImg"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/eventTypeImg"
        android:layout_marginTop="10dp"
        />

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/eventExtra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:font_name="@string/font_montserrat_regular"
        android:textColor="@color/semi_dark_text"
        android:layout_below="@+id/eventPlayer"
        android:textSize="12sp"
        android:layout_alignLeft="@+id/eventPlayer"
        android:text="for Tripping."
        />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_white"
        android:layout_below="@id/eventTime"
        android:layout_marginTop="3dp"
        />


</RelativeLayout>