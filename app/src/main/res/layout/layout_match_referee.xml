<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refereeCard"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="3dp"
    android:layout_marginTop="10dp"
    >



    <RelativeLayout
        android:id="@+id/refereeDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/card_padding"
        >

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/refereeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REFEREE"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_regular"
            android:textAllCaps="true"
            android:textColor="@color/light_text"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/light_white"
            android:layout_below="@+id/refereeTitle"
            android:layout_marginTop="5dp"
            />



        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/refereeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/refereeTitle"
            android:textColor="@color/near_dark_text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_semibold"
            android:text=""
            app:drawableLeftCompat="@drawable/ic_whistle_gray"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:layout_marginTop="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
