<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/teamStatsCard"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="3dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="3dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            >



            <com.webbisswift.cfcn.ui.custom_views.CTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Possession"
                android:layout_gravity="center"
                app:font_name="@string/font_montserrat_regular"
                android:textColor="@color/semi_dark_text"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/lastMatchTitle"
                android:layout_marginTop="10dp"
                android:padding="5dp"
                android:layout_gravity="center"
                >



                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/homePossesion"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="30dp"
                    app:rcProgress="60"
                    app:rcMax="100"
                    app:rcRadius="3dp"
                    app:rcBackgroundPadding="0dp"
                    app:rcReverse="true"
                    app:rcProgressColor="@color/loss_1"
                    app:rcSecondaryProgressColor="@color/loss_2"
                    app:rcBackgroundColor="@color/near_dark_text" />

                <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                    android:id="@+id/awayPosession"
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="30dp"
                    app:rcProgress="40"
                    app:rcMax="100"
                    app:rcRadius="3dp"
                    app:rcBackgroundPadding="0dp"
                    app:rcReverse="false"
                    app:rcProgressColor="@color/colorPrimaryDark"
                    app:rcSecondaryProgressColor="@color/colorPrimary"
                    app:rcBackgroundColor="@color/near_dark_text" />


            </LinearLayout>



        </LinearLayout>



    </android.support.v7.widget.CardView>


</LinearLayout>