<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:orientation="vertical" android:layout_width="0dp"
        android:layout_weight="0.7"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground"
        android:layout_margin="5dp"
        >





        <ImageView
            android:id="@+id/playerImg"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_toRightOf="@+id/serialNo"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:padding="3dp"
            android:background="@drawable/player_pic_round_bg"
            />

        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/playerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_semibold"
            android:text="Willy Caballero"
            android:textColor="@color/colorPrimary"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/playerImg"
            android:layout_alignTop="@+id/playerImg"
            android:layout_marginTop="3dp"
            />


        <com.webbisswift.cfcn.v3.custom_views.CTextView
            android:id="@+id/playerTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            app:font_name="@string/font_montserrat_regular"
            android:textAllCaps="false"
            android:text="Chelsea"
            android:textColor="@color/light_text"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/playerImg"
            android:layout_below="@+id/playerName"
            />







    </RelativeLayout>

    <com.webbisswift.cfcn.v3.custom_views.CTextView
        android:id="@+id/assistCount"
        android:layout_width="0dp"
        android:layout_weight="0.3"
        android:layout_height="match_parent"
        android:textSize="14sp"
        app:font_name="@string/font_montserrat_semibold"
        android:textAllCaps="true"
        android:textColor="@color/colorPrimary"
        android:text="20"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        />




</LinearLayout>