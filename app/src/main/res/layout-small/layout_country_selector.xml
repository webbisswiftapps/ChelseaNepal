<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.screens.splash.SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/west_stand"
        android:scaleType="centerCrop"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/toolbar_tp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.webbisswift.cfcn.ui.custom_views.CTextView
            android:id="@+id/topWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:font_name="@string/font_montserrat_semibold"
            android:text="@string/welcome"
            android:textSize="14sp"
            android:textColor="@color/text_white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:shadowColor="@color/chelsea_blue_dark"
            />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/leagueTableCard"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="3dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/topWelcome"
            android:layout_margin="@dimen/card_padding"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <com.webbisswift.cfcn.ui.custom_views.CTextView
                    android:id="@+id/description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:font_name="@string/font_montserrat_regular"
                    android:text="@string/desc_region_select"
                    android:textSize="12sp"
                    android:padding="14dp"
                    android:textColor="@color/near_dark_text"
                    />


                <Spinner
                    android:id="@+id/countrySpinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/countries"
                    android:padding="10dp"
                    />




                <CheckBox
                    android:id="@+id/dontShowCB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dont_show_tv_info_again"
                    />

                <com.webbisswift.cfcn.ui.custom_views.CButton
                    android:id="@+id/continueBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/colorful_gradient"
                    android:text="Continue"
                    android:textColor="@color/text_white"
                    app:font_name="@string/font_montserrat_semibold"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textAllCaps="true"
                    app:drawableRightCompat="@drawable/ic_arrow_forward_white_24dp"
                    />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </RelativeLayout>

</FrameLayout>
