<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/v3colorPrimary</item>
        <item name="colorPrimaryDark">@color/v3colorPrimaryDark</item>
        <item name="colorAccent">@color/v3colorAccentDark</item>
        <item name="android:windowBackground">@color/windown_background_light</item>

    </style>

    <style name="AppTheme.Fullscreen" parent="AppTheme">
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@color/text_white</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>




</resources>
