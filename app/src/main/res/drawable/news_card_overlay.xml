<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape
        android:shape="rectangle">
        <solid android:color="@color/black_overlay" />
    </shape>
</item>

<item android:top="180dp"
    android:bottom="-300dp"
    android:left="0dp"
    android:right="-300dp">
    <rotate
        android:fromDegrees="-1"
        android:pivotX="20%"
        android:pivotY="100%">
        <shape
            android:shape="rectangle">
            <gradient android:startColor="@color/v3colorPrimaryDarkestvTP"
                android:endColor="@color/moon_purple_g1"
                android:angle="90"
                />

            <!--<solid android:color="@color/colorPrimary" />-->
        </shape>
    </rotate>
</item>
</layer-list>