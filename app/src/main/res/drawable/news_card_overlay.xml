<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape
        android:shape="rectangle">
        <solid android:color="@color/tp_subtle_news" />
    </shape>
</item>

<item android:top="180dp"
    android:bottom="-300dp"
    android:left="0dp"
    android:right="-300dp">
    <rotate
        android:fromDegrees="-4"
        android:pivotX="20%"
        android:pivotY="100%">
        <shape
            android:shape="rectangle">
            <gradient android:startColor="#ff69f0ae"
                android:endColor="#fd346db4"
                android:angle="90"
                />

            <!--<solid android:color="@color/colorPrimary" />-->
        </shape>
    </rotate>
</item>
</layer-list>