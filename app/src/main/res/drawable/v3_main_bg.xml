<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/v3colorPrimaryDarkestTP" />
        </shape>
    </item>

    <item android:top="-20dp"
        android:bottom="400dp"
        android:left="0dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="-6"
            android:pivotX="20%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <gradient
                    android:startColor="@color/v3colorPrimaryTP"
                    android:endColor="@color/v3colorPrimaryTP"
                    android:angle="270"
                    />
                <!--<solid android:color="@color/colorPrimary" />-->
            </shape>
        </rotate>
    </item>
</layer-list>